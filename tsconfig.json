{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "classes/*": [
        "src/classes/*"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "helpers/*": [
        "src/helpers/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/tests/*.test.ts",
    "tests"
  ]
}